process {
    withName: 'shapeit5_phase_samples' {
        ext.argsDefault = [:]
        ext.argsDynamic = {
            def dynamicMap = [:]

            // set dynamic arguments for paired-end reads
            if (metadata.geneticMaps == 'provided') {
                // set adapter to trim for R2 read
                dynamicMap.put('-m', 'geneticMapPath')
            }

            return dynamicMap
        }
    }

}